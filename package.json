{
  "name": "bitcoin-utility-belt",
  "version": "1.0.0",
  "description": "Bitcoin Utility Belt is a client-side Bitcoin JavaScript library",
  "repository": "github:MiguelMedeiros/bitcoin-utility-belt",
  "license": "MIT",
  "author": "Miguel Medeiros",
  "email": "miguel@miguelmedeiros.com.br",
  "url": "http://www.miguelmedeiros.com.br/",
  "private": true,
  "main": "./src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "browserify src/index.js --standalone belt > dist/bitcoin-utility-belt.js | browserify src/index.js --standalone belt | uglifyjs > dist/bitcoin-utility-belt.min.js"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "keywords": [
    "bip38",
    "bip39",
    "bitcoin",
    "bitcoinjs",
    "bitcoinjs-message",
    "browserify",
    "javascript"
  ],
  "files": [
    "src"
  ],
  "dependencies": {
    "bigi": "^1.4.2",
    "bip38": "^2.0.2",
    "bitcoinjs-lib": "^3.3.2",
    "bitcoinjs-message": "^2.0.0",
    "safe-buffer": "^5.1.2",
    "wif": "^2.0.6"
  },
  "devDependencies": {
    "browserify": "^16.2.2",
    "uglify-js-es6": "^2.8.9"
  }
